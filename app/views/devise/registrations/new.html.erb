<div class="contents-login">
  <div class="container-top">
    <div class="container-login">
      <h3>会員登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class='field'>
          <br><%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, class: 'input form-control' %><br>
        </div>
        <div class='field'>
          <%= f.label :パスワード %>
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: 'off', class: 'input form-control' %>
        </div>
        <div class='field'>
          <%= f.label :パスワード（確認） %><br />
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'input form-control' %>
        </div>
          <%= f.submit class: 'btn btn-primary withripple', value: '新規登録' %>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
    <h3>注意</h3>
  </div>
</div>