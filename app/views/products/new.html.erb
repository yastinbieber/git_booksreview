<div class="contents-box">
  <div class="container-left">
    <div class="container-left-register">
      <h3>書籍を登録する</h3>
    </div>
    <div class="book-write-review">
      <%= form_for(@product) do |f| %>
      <div class="field">
        <span><%= f.label :image, "画像アップロード：" %></span><br>
        <%= f.file_field :image %><br><br>
      </div>
      <div class="field">
        <span><%= f.label :bookname, "書籍の名前：" %></span><br>
        <%= f.text_field :bookname, placeholder: "書籍の名前", class: 'input form-control' %>
      </div>
      <div class="field">
        <br><span><%= f.label :author, "著者：" %></span><br>
        <%= f.text_field :author, placeholder: "著者", class: 'input form-control' %>
      </div>
      <%= f.submit "送信", class: "btn" %>
      <% end %>
    </div>
  </div>
</div>

