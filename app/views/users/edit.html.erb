<div class="contents-box">
  <div class="container-left">
    <div class="book-write-review">
      <%= form_for current_user do |f| %>
        <span><%= f.label :image, "画像アップロード：", class: "III" %></span>
        <%= f.file_field :image, class: 'input form-control' %><br><br>
        <span><%= f.label :nickname, "nickname：", class: "III" %></span>
        <%= f.text_field :nickname, placeholder: "nickname", class: 'input form-control' %><br>
        <br><span><%= f.label :selfintroduction, "自己紹介：", class: "III" %></span>
        <%= f.text_area :selfintroduction, placeholder: "自己紹介", class: 'input form-control' %><br>
        <%= f.submit "送信", class: "btn" %>
      <% end %>
    </div>
  </div>
</div>