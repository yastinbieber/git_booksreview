<div class="contents-box">
  <div class="container-left">
    <div class="container-left-register">
      <h3>選んだ書籍</h3>
    </div>
    <div class="container-search-result">
      <div class="container-search-result-box" title="<%= @product.bookname %>">
        <div class="container-search-result-box-left" >
          <% if @product.image.attached? %>
            <%= image_tag @product.image %>
          <% end %>
        </div>
        <div class="container-search-result-box-right">
          <h2><%= @product.bookname %></h2>
          <p><%= @product.author %></p>
        </div>
      </div>
    </div>
    <!--レビュー詳細-->
    <div class="container-left-register">
      <h3>レビュー詳細</h3>
    </div>
    <div class="review-detail">
      <div class="review-detail-item">
        <div class="username">
          <a class="user-page" href="/users/<%= @review.user_id %>">@<%= @review.user.nickname %></a>
          <p class="text-small">
          <span>レビューに対しての平均評価：</span>
          <span class="rating-star"><i class="star-actived rate-<%= @comment.rate %>0"></i></span>
        </p>
        </div>
        <div class="write-review">
          <h3><span class="product-btn">title：<%= @product.bookname %></span></h3>
        </div>
        <br>
        <div class="review-1">
          <p><%= @review.review %></p>
        </div>
        <div class="review-2">
          <p><%= @review.review %></p>
        </div>
        <div class="review-3">
          <p><%= @review.review %></p>
        </div>
      </div>
    </div>
    <!--以下FB内容-->
    <div class="container-left-register">
      <h3>レビューに対するフィードバック</h3>
    </div>
    <div class="review-detail">
      <div class="review-detail-item">
        <div class="username-1">
          <a class="user-page" href="/users/<%= @comment.user_id %>">@<%= @comment.user.nickname %></a>
          <p class="text-small">
            <span>レビューに対しての評価：</span>
            <span class="rating-star"><i class="star-actived rate-<%= @comment.rate %>0"></i></span>
          </p>
        </div>
        <div class="feedback-1">
          <p><%= @comment.text %></p>
        </div>
      </div>
      <% if user_signed_in? && current_user.id == @comment.user_id %>
      <%= link_to '編集', "/products/#{@product.id}/reviews/#{@review.id}/comments/#{@comment.id}/edit", method: :get, class: "right-btn-review-detail" %>
      <%= link_to '削除', "/products/#{@product.id}/reviews/#{@review.id}/comments/#{@comment.id}", method: :delete, class: "right-btn-review-detail" %>
      <% end %>
    </div>
  </div>
</div>

